<parameter name="content">import { auth, currentUser } from '@clerk/nextjs/server'
import { redirect } from 'next/navigation'
import { BookOpen, Clock, Target, TrendingUp } from 'lucide-react'

export default async function DashboardPage() {
  // Protect the route - require authentication
  const { userId } = auth()
  
  if (!userId) {
    redirect('/sign-in')
  }

  // Get current user info
  const user = await currentUser()

  const stats = [
    {
      icon: BookOpen,
      label: 'Active Courses',
      value: '0',
      change: '+0 this week',
      color: 'text-blue-400'
    },
    {
      icon: Clock,
      label: 'Study Hours',
      value: '0h',
      change: '+0h this week',
      color: 'text-green-400'
    },
    {
      icon: Target,
      label: 'Goals Completed',
      value: '0',
      change: '+0 this week',
      color: 'text-purple-400'
    },
    {
      icon: TrendingUp,
      label: 'Progress',
      value: '0%',
      change: '+0% this week',
      color: 'text-orange-400'
    }
  ]

  return (
    <div className="min-h-screen bg-slate-950 text-white">
      {/* Header */}
      <div className="border-b border-slate-800 bg-slate-900/50 backdrop-blur-sm">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
          <div className="flex items-center justify-between">
            <div>
              <h1 className="text-2xl font-bold text-white">
                Welcome back, {user?.firstName || 'Student'}!
              </h1>
              <p className="text-slate-400 mt-1">
                Ready to continue your learning journey?
              </p>
            </div>
        </div>

      {/* Main Content */}
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div className="space-y-8">
          {/* Quick Stats */}
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {stats.map((stat, index) => {
              const Icon = stat.icon
              return (
                <div
                  key={index}
                  className="bg-slate-900/50 rounded-xl border border-slate-800 p-6 hover:bg-slate-900/70 transition-colors"
                >
                  <div className="flex items-center justify-between">
                    <div>
                      <p className="text-slate-400 text-sm font-medium">
                        {stat.label}
                      </p>
                      <p className="text-2xl font-bold text-white mt-1">
                        {stat.value}
                      </p>
                      <p className="text-xs text-slate-500 mt-1">
                        {stat.change}
                      </p>
                    </div>
                    <div className={`p-3 rounded-lg bg-slate-800 ${stat.color}`}>
                      <Icon className="h-6 w-6" />
                    </div>
                </div>
              )
            })}
          </div>

          {/* Upload Syllabus Section */}
          <div className="bg-slate-900/50 rounded-xl border border-slate-800 p-6">
            <h2 className="text-xl font-semibold text-white mb-4">
              Upload Your Syllabus
            </h2>
            <p className="text-slate-400 mb-6">
              Upload your course syllabus to get started with AI-powered study planning
            </p>
            <div className="border-2 border-dashed border-slate-600 rounded-lg p-8 text-center">
              <div className="text-slate-400 mb-4">
                <svg className="w-12 h-12 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                </svg>
                <p>Drag and drop your syllabus file here, or click to browse</p>
                <p className="text-sm mt-2">Supported formats: PDF, DOC, DOCX</p>
              </div>
          </div>

          {/* Study Plans */}
          <div className="bg-slate-900/50 rounded-xl border border-slate-800 p-6">
            <h2 className="text-xl font-semibold text-white mb-4">
              Your Study Plans
            </h2>
            <div className="text-center py-8">
              <div className="text-slate-400">
                <Target className="w-12 h-12 mx-auto mb-4 opacity-50" />
                <p>No study plans yet</p>
                <p className="text-sm mt-2">Upload a syllabus to get started</p>
              </div>
          </div>
      </div>
  )
}</parameter>
