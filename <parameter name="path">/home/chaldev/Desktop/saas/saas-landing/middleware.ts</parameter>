<parameter name="content">import { clerkMiddleware, createRouteMatcher } from "@clerk/nextjs/server";

// 1. Define which routes are public (Landing page, etc.)
// Everything else will require a login.
const isPublicRoute = createRouteMatcher([
  '/', 
  '/sign-in(.*)', 
  '/sign-up(.*)'
]);

export default clerkMiddleware(async (auth, request) => {
  // 2. Protect routes that are NOT public
  if (!isPublicRoute(request)) {
    await auth.protect();
  }
  
  // Add debugging for authentication issues in development
  if (process.env.NODE_ENV === 'development') {
    console.log(`[Clerk Middleware] ${request.method} ${request.url}`);
  }
});

export const config = {
  matcher: [
    // Skip Next.js internals and all static files
    '/((?!_next|[^?]*\\.(?:html?|css|js(?!on)|jpe?g|webp|png|gif|svg|ttf|woff2?|ico|csv|docx?|xlsx?|zip|webmanifest)).*)',
    // Always run for API routes
    '/(api|trpc)(.*)',
  ],
};</parameter>
