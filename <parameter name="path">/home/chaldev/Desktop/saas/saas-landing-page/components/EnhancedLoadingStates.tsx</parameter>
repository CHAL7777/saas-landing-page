<parameter name="content">"use client";
import { motion } from "framer-motion";
import { ReactNode } from "react";

export interface SkeletonProps {
  className?: string;
  variant?: "text" | "circular" | "rectangular";
  width?: string | number;
  height?: string | number;
  animation?: "pulse" | "wave" | "none";
}

// Enhanced Skeleton Component
export function Skeleton({
  className = "",
  variant = "rectangular",
  width,
  height,
  animation = "pulse",
}: SkeletonProps) {
  const baseClasses = "bg-slate-700/30";
  
  const variantClasses = {
    text: "rounded h-4",
    circular: "rounded-full",
    rectangular: "rounded-lg",
  };

  const animationClasses = {
    pulse: "animate-pulse",
    wave: "animate-pulse [background:linear-gradient(90deg,transparent,rgba(255,255,255,0.1),transparent)] [background-size:200%_100%]",
    none: "",
  };

  const style = {
    width: typeof width === "number" ? `${width}px` : width,
    height: typeof height === "number" ? `${height}px` : height,
  };

  return (
    <div
      className={`${baseClasses} ${variantClasses[variant]} ${animationClasses[animation]} ${className}`}
      style={style}
    />
  );
}

// Dashboard Overview Skeleton
export function DashboardOverviewSkeleton() {
  return (
    <div className="space-y-8">
      {/* Header Stats */}
      <div className="grid grid-cols-1 md:grid-cols-4 gap-6">
        {Array.from({ length: 4 }).map((_, i) => (
          <div key={i} className="p-6 rounded-[2rem] bg-white/[0.02] border border-white/5">
            <Skeleton className="mb-4" width="60%" height={20} />
            <Skeleton width="80%" height={32} />
          </div>
        ))}
      </div>

      {/* Tasks and Events */}
      <div className="grid md:grid-cols-2 gap-6">
        <div className="p-6 rounded-[2rem] bg-white/[0.02] border border-white/5">
          <Skeleton className="mb-4" width="40%" height={24} />
          <div className="space-y-3">
            {Array.from({ length: 3 }).map((_, i) => (
              <div key={i} className="flex items-center justify-between p-3 bg-slate-900/30 rounded-xl">
                <div className="flex-1">
                  <Skeleton width="70%" height={16} className="mb-2" />
                  <Skeleton width="50%" height={12} />
                </div>
                <Skeleton width={60} height={24} />
              </div>
            ))}
          </div>

        <div className="p-6 rounded-[2rem] bg-white/[0.02] border border-white/5">
          <Skeleton className="mb-4" width="50%" height={24} />
          <div className="space-y-3">
            {Array.from({ length: 3 }).map((_, i) => (
              <div key={i} className="flex items-center justify-between p-3 bg-slate-900/30 rounded-xl">
                <div className="flex-1">
                  <Skeleton width="80%" height={16} className="mb-2" />
                  <Skeleton width="60%" height={12} />
                </div>
            ))}
          </div>
      </div>
  );
}

// Task List Skeleton
export function TaskListSkeleton() {
  return (
    <div className="space-y-4">
      {Array.from({ length: 5 }).map((_, i) => (
        <div key={i} className="p-4 bg-white/[0.02] border border-white/5 rounded-xl">
          <div className="flex items-center justify-between">
            <div className="flex items-center gap-4 flex-1">
              <Skeleton variant="circular" width={20} height={20} />
              <div className="flex-1">
                <Skeleton width="70%" height={16} className="mb-2" />
                <Skeleton width="40%" height={12} />
              </div>
            <div className="flex items-center gap-2">
              <Skeleton width={80} height={24} />
              <Skeleton width={60} height={24} />
            </div>
        </div>
      ))}
    </div>
  );
}

// Focus Mode Skeleton
export function FocusModeSkeleton() {
  return (
    <div className="fixed inset-0 z-[100] bg-slate-950 flex flex-col items-center justify-center p-6">
      <div className="absolute top-10 left-10 right-10 flex justify-between items-center">
        <div className="flex items-center gap-3">
          <Skeleton variant="circular" width={40} height={40} />
          <div>
            <Skeleton width={120} height={20} className="mb-2" />
            <Skeleton width={100} height={12} />
          </div>
        <Skeleton variant="circular" width={40} height={40} />
      </div>

      <div className="text-center">
        <Skeleton width={200} height={40} className="mb-4 mx-auto" />
        <Skeleton variant="circular" width={256} height={256} className="mb-8" />
        <div className="flex items-center justify-center gap-4">
          <Skeleton width={100} height={40} />
          <Skeleton width={100} height={40} />
          <Skeleton width={100} height={40} />
        </div>
    </div>
