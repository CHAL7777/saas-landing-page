<parameter name="content">"use client";
import { useState, useEffect } from "react";
import { motion, AnimatePresence } from "framer-motion";
import { 
  Home, 
  CheckSquare, 
  BarChart3, 
  Calendar, 
  BookOpen, 
  User,
  Settings,
  Plus,
  Search,
  Bell,
  Menu,
  X,
  Upload,
  Target
} from "lucide-react";
import Link from "next/link";
import { usePathname } from "next/navigation";
import { useAuth } from "@/contexts/AuthContext";

interface MobileNavItem {
  id: string;
  label: string;
  icon: React.ComponentType<any>;
  href: string;
  badge?: number;
}

interface MobileNavigationProps {
  activeTab?: string;
  onTabChange?: (tab: string) => void;
  showAddButton?: boolean;
  onAddClick?: () => void;
  showNotifications?: boolean;
  notificationCount?: number;
  onNotificationClick?: () => void;
}

export function MobileNavigation({
  activeTab = "overview",
  onTabChange,
  showAddButton = true,
  onAddClick,
  showNotifications = true,
  notificationCount = 0,
  onNotificationClick,
}: MobileNavigationProps) {
  const [isMenuOpen, setIsMenuOpen] = useState(false);
  const [isScrolled, setIsScrolled] = useState(false);
  const pathname = usePathname();
  const { user } = useAuth();

  // Handle scroll effect
  useEffect(() => {
    const handleScroll = () => {
      setIsScrolled(window.scrollY > 10);
    };

    window.addEventListener("scroll", handleScroll);
    return () => window.removeEventListener("scroll", handleScroll);
  }, []);

  // Navigation items
  const navItems: MobileNavItem[] = [
    { id: "overview", label: "Home", icon: Home, href: "/dashboard" },
    { id: "tasks", label: "Tasks", icon: CheckSquare, href: "/dashboard?tab=tasks" },
    { id: "stats", label: "Stats", icon: BarChart3, href: "/dashboard?tab=stats" },
    { id: "calendar", label: "Calendar", icon: Calendar, href: "/dashboard?tab=calendar" },
    { id: "study-plan", label: "Study", icon: BookOpen, href: "/dashboard?tab=study-plan" },
    { id: "syllabus", label: "Upload", icon: Upload, href: "/dashboard?tab=syllabus" },
  ];

  const handleTabClick = (item: MobileNavItem) => {
    if (onTabChange) {
      onTabChange(item.id);
    }
    setIsMenuOpen(false);
  };

  return (
    <>
      {/* Main Mobile Navigation */}
      <nav className={`fixed bottom-0 left-0 right-0 z-50 md:hidden transition-all duration-300 ${
        isScrolled ? "bg-slate-950/95 backdrop-blur-xl border-t border-white/10" : "bg-transparent"
      }`}>
        <div className="bg-slate-950/95 backdrop-blur-xl border-t border-white/10 px-4 py-2">
          <div className="flex items-center justify-between">
            {/* Main Navigation Items */}
            <div className="flex items-center gap-1 overflow-x-auto">
              {navItems.map((item) => (
                <button
                  key={item.id}
                  onClick={() => handleTabClick(item)}
                  className={`flex flex-col items-center gap-1 px-3 py-2 rounded-xl transition-all min-w-0 ${
                    activeTab === item.id
                      ? "bg-emerald-500/20 text-emerald-400"
                      : "text-slate-400 hover:text-white hover:bg-white/5"
                  }`}
                >
                  <div className="relative">
                    <item.icon size={20} />
                    {item.badge && item.badge > 0 && (
                      <div className="absolute -top-2 -right-2 w-4 h-4 bg-red-500 rounded-full flex items-center justify-center">
                        <span className="text-xs text-white font-bold">{item.badge}</span>
                      </div>
                    )}
                  </div>
                  <span className="text-xs font-medium whitespace-nowrap">{item.label}</span>
                </button>
              ))}
            </div>

            {/* Quick Actions */}
            <div className="flex items-center gap-2">
              {showNotifications && (
                <button
                  onClick={onNotificationClick}
                  className="relative p-2 text-slate-400 hover:text-white hover:bg-white/5 rounded-xl transition-colors"
                >
                  <Bell size={20} />
                  {notificationCount > 0 && (
                    <div className="absolute -top-1 -right-1 w-5 h-5 bg-red-500 rounded-full flex items-center justify-center">
                      <span className="text-xs text-white font-bold">{notificationCount}</span>
                    </div>
                  )}
                </button>
              )}

              {showAddButton && (
                <button
                  onClick={onAddClick}
                  className="p-2 bg-emerald-500 text-slate-950 rounded-xl hover:bg-emerald-400 transition-colors"
                >
                  <Plus size={20} />
                </button>
              )}

              <button
                onClick={() => setIsMenuOpen(true)}
                className="p-2 text-slate-400 hover:text-white hover:bg-white/5 rounded-xl transition-colors"
              >
                <Menu size={20} />
              </button>
            </div>
        </div>
      </nav>

      {/* Bottom Safe Area */}
      <div className="h-20 md:hidden" />

      {/* Mobile Menu Overlay */}
      <AnimatePresence>
        {isMenuOpen && (
          <>
            <motion.div
              initial={{ opacity: 0 }}
              animate={{ opacity: 1 }}
              exit={{ opacity: 0 }}
              className="fixed inset-0 bg-black/50 z-40 md:hidden"
              onClick={() => setIsMenuOpen(false)}
            />
            
            <motion.div
              initial={{ x: "100%" }}
              animate={{ x: 0 }}
              exit={{ x: "100%" }}
              transition={{ type: "spring", damping: 25, stiffness: 200 }}
              className="fixed top-0 right-0 bottom-0 w-80 max-w-[85vw] bg-slate-950 z-50 md:hidden"
            >
              <div className="flex flex-col h-full">
                {/* Header */}
                <div className="flex items-center justify-between p-6 border-b border-white/10">
                  <div className="flex items-center gap-3">
                    <div className="w-10 h-10 bg-emerald-500/20 rounded-full flex items-center justify-center">
                      <User size={20} className="text-emerald-400" />
                    </div>
                    <div>
                      <h3 className="text-white font-bold">{user?.name || "Student"}</h3>
                      <p className="text-slate-400 text-sm">{user?.email}</p>
                    </div>
                  <button
                    onClick={() => setIsMenuOpen(false)}
                    className="p-2 text-slate-400 hover:text-white hover:bg-white/5 rounded-xl transition-colors"
                  >
                    <X size={20} />
                  </button>
                </div>

                {/* Search */}
                <div className="p-4 border-b border-white/10">
                  <div className="relative">
                    <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 text-slate-500" size={18} />
                    <input
                      type="text"
                      placeholder="Search tasks, courses..."
                      className="w-full pl-10 pr-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder:text-slate-500 focus:outline-none focus:ring-2 focus:ring-emerald-500/50"
                    />
                  </div>

                {/* Navigation */}
                <div className="flex-1 overflow-y-auto p-4">
                  <div className="space-y-2">
                    <h4 className="text-slate-400 text-sm font-medium mb-3">Navigation</h4>
                    {navItems.map((item) => (
                      <button
                        key={item.id}
                        onClick={() => handleTabClick(item)}
                        className={`w-full flex items-center gap-3 px-4 py-3 rounded-xl transition-all ${
                          activeTab === item.id
                            ? "bg-emerald-500/20 text-emerald-400"
                            : "text-slate-400 hover:text-white hover:bg-white/5"
                        }`}
                      >
                        <item.icon size={20} />
                        <span className="font-medium">{item.label}</span>
                      </button>
                    ))}
                  </div>

                  <div className="mt-8 space-y-2">
                    <h4 className="text-slate-400 text-sm font-medium mb-3">Quick Actions</h4>
                    <button className="w-full flex items-center gap-3 px-4 py-3 rounded-xl text-slate-400 hover:text-white hover:bg-white/5 transition-colors">
                      <Target size={20} />
                      <span className="font-medium">Start Focus Session</span>
                    </button>
                    <button className="w-full flex items-center gap-3 px-4 py-3 rounded-xl text-slate-400 hover:text-white hover:bg-white/5 transition-colors">
                      <Plus size={20} />
                      <span className="font-medium">Add New Task</span>
                    </button>
                    <button className="w-full flex items-center gap-3 px-4 py-3 rounded-xl text-slate-400 hover:text-white hover:bg-white/5 transition-colors">
                      <Calendar size={20} />
                      <span className="font-medium">Schedule Event</span>
                    </button>
                  </div>

                {/* Footer */}
                <div className="p-4 border-t border-white/10">
                  <Link
                    href="/settings"
                    className="w-full flex items-center gap-3 px-4 py-3 rounded-xl text-slate-400 hover:text-white hover:bg-white/5 transition-colors"
                  >
                    <Settings size={20} />
                    <span className="font-medium">Settings</span>
                  </Link>
                </div>
            </motion.div>
          </>
        )}
      </AnimatePresence>
    </>
  );
}

// Mobile Floating Action Button
export function MobileFAB({
  onClick,
  icon: Icon = Plus,
  className = "",
}: {
  onClick: () => void;
  icon?: React.ComponentType<any>;
  className?: string;
}) {
  return (
    <motion.button
      initial={{ scale: 0 }}
      animate={{ scale: 1 }}
      whileHover={{ scale: 1.1 }}
      whileTap={{ scale: 0.9 }}
      onClick={onClick}
      className={`fixed bottom-24 right-6 z-40 w-14 h-14 bg-emerald-500 text-slate-950 rounded-full shadow-2xl flex items-center justify-center hover:bg-emerald-400 transition-colors ${className}`}
    >
      <Icon size={24} />
    </motion.button>
  );
}

// Mobile Header Component
export function MobileHeader({
  title,
  showBackButton = false,
  onBackClick,
  actions,
  className = "",
}: {
  title: string;
  showBackButton?: boolean;
  onBackClick?: () => void;
  actions?: React.ReactNode;
  className?: string;
}) {
  return (
    <header className={`fixed top-0 left-0 right-0 z-30 bg-slate-950/95 backdrop-blur-xl border-b border-white/10 ${className}`}>
      <div className="flex items-center justify-between px-4 py-3">
        <div className="flex items-center gap-3">
          {showBackButton && (
            <button
              onClick={onBackClick}
              className="p-2 text-slate-400 hover:text-white hover:bg-white/5 rounded-xl transition-colors"
            >
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
              </svg>
            </button>
          )}
          <h1 className="text-white font-bold text-lg">{title}</h1>
        </div>
        
        {actions && (
          <div className="flex items-center gap-2">
            {actions}
          </div>
        )}
      </div>
    </header>
  );
}

// Mobile Bottom Sheet Component
export function MobileBottomSheet({
  isOpen,
  onClose,
  title,
  children,
  maxHeight = "50vh",
}: {
  isOpen: boolean;
  onClose: () => void;
  title: string;
  children: React.ReactNode;
  maxHeight?: string;
}) {
  return (
    <AnimatePresence>
      {isOpen && (
        <>
          <motion.div
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            exit={{ opacity: 0 }}
            className="fixed inset-0 bg-black/50 z-50"
            onClick={onClose}
          />
          
          <motion.div
            initial={{ y: "100%" }}
            animate={{ y: 0 }}
            exit={{ y: "100%" }}
            transition={{ type: "spring", damping: 25, stiffness: 200 }}
            className="fixed bottom-0 left-0 right-0 bg-slate-950 z-50 rounded-t-2xl border-t border-white/10"
            style={{ maxHeight }}
          >
            <div className="p-6">
              {/* Handle */}
              <div className="w-12 h-1 bg-slate-600 rounded-full mx-auto mb-6" />
              
              {/* Title */}
              <h2 className="text-white font-bold text-xl mb-4">{title}</h2>
              
              {/* Content */}
              <div className="max-h-96 overflow-y-auto">
                {children}
              </div>
          </motion.div>
        </>
      )}
    </AnimatePresence>
  );
}

// Responsive Grid Component
export function ResponsiveGrid({
  children,
  className = "",
  minItemWidth = "280px",
}: {
  children: React.ReactNode;
  className?: string;
  minItemWidth?: string;
}) {
  return (
    <div 
      className={`grid gap-4 ${className}`}
      style={{
        gridTemplateColumns: `repeat(auto-fit, minmax(${minItemWidth}, 1fr))`,
      }}
    >
      {children}
    </div>
  );
}
</parameter>
